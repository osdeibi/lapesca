<div class="container">
  <div class="row">
    <div class="col-xs-12">
      <br>
      <% flash.each do |message_type, message| %>
        <div class="alert alert-<%= message_type %> alert-dismissable">
          <button type="button" class="close" data-dismiss="alert" aria-hidden="true">
            <i class="fa fa-times"></i>
          </button>
          <% if message.is_a? Array %>
            <% message.each do |msg| %>
              <p><%= msg %></p>
            <% end %>
          <% else %>
            <p><%= message %></p>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</div>
