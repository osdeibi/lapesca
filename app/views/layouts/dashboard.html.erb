<body class="nav-md">

  <div class="container body">


    <div class="main_container">

      <div class="col-md-3 left_col">
        <div class="left_col scroll-view">

          <div class="navbar nav_title" style="border: 0;">
            <a href="/dashboard" class="site_title"><i class="fa fa-bed"></i> <span>La Pesca</span></a>
          </div>
          <div class="clearfix"></div>


          <!-- menu prile quick info -->
          <div class="profile">
            <div class="profile_pic">
              <%= image_tag 'hugo-perfil.png', class: 'img-circle profile_img', alt: '...' %>
            </div>
            <div class="profile_info">
              <span>Bienvenido,</span>
              <h2>Hugo De la Garza</h2>
            </div>
          </div>
          <!-- /menu prile quick info -->

          <br />

          <!-- sidebar menu -->
          <div id="sidebar-menu" class="main_menu_side hidden-print main_menu">

            <div class="menu_section">
              <h3>Menu</h3>
              <ul class="nav side-menu">
                <li><a><i class="fa fa-edit"></i> Registro <span class="fa fa-chevron-down"></span></a>
                  <ul class="nav child_menu" style="display: none">
                    <li><a href="/dashboard/reservations">Reservaciones</a>
                    </li>
                    <li><a href="index2.html">Hoteles</a>
                    </li>
                  </ul>
                </li>
                <li><a><i class="fa fa-calendar"></i> Calendarios <span class="fa fa-chevron-down"></span></a>
                  <ul class="nav child_menu" style="display: none">
                    <% @hotels.each do |hotel| %>
                      <li>
                        <a href="/dashboard/calendar/<%= hotel.id %>"><%= hotel.name %></a>
                      </li>
                    <% end %>
                  </ul>
                </li>
                <li><a><i class="fa fa-file-text"></i> Reportes <span class="fa fa-chevron-down"></span></a>
                  <ul class="nav child_menu" style="display: none">
                    <li><a href="general_elements.html">Reporte de reservaciones</a>
                    </li>
                    <li><a href="media_gallery.html">Factura a hoteles</a>
                    </li>
                  </ul>
                </li>
              </ul>
            </div>
          </div>
          <!-- /sidebar menu -->
        </div>
      </div>

      <!-- top navigation -->
      <div class="top_nav">

        <div class="nav_menu">
          <nav class="" role="navigation">
            <div class="nav toggle">
              <a id="menu_toggle"><i class="fa fa-bars"></i></a>
            </div>
          </nav>
        </div>

      </div>
      <!-- /top navigation -->

      <%= yield %>

      <!-- footer content -->
      <footer>
        <div class="pull-right">
          Copyright 2016 <a href="http://www.lapescatamaulipas.com">Lapescatamaulipas.com</a>
        </div>
        <div class="clearfix"></div>
      </footer>
      <!-- /footer content -->
      </div>

    </div>
  </div>

  <div id="custom_notifications" class="custom-notifications dsp_none">
    <ul class="list-unstyled notifications clearfix" data-tabbed_notifications="notif-group">
    </ul>
    <div class="clearfix"></div>
    <div id="notif-group" class="tabbed_notifications"></div>
  </div>

</body>

</html>
